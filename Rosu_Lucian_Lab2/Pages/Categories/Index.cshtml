@page "{id:int?}"
@model Rosu_Lucian_Lab2.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryData.Categories.First().CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CategoryData.Categories)
        {
            string selectedRow = "";
            if (item.ID == Model.CategoryID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.CategoryData.Books != null && Model.CategoryData.Books.Any())
{
    <h3>Books in Selected Category</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryData.Books.First().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryData.Books.First().Author.FullName)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CategoryData.Books)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Author.FullName
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
